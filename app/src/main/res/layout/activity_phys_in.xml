<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".physInAct">

    <Button
        android:id="@+id/kinematics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:backgroundTint="#777"
        android:layout_marginTop="11dp"
        android:text="@string/kinematicsTxt"
        tools:ignore="InOrMmUsage" />


    <Button
        android:id="@+id/statics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kinematics"
        android:backgroundTint="#777"
        android:gravity="center"
        android:layout_marginTop="11dp"
        android:text="@string/staticsTxt" />

    <Button
        android:id="@+id/dynamics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statics"
        android:backgroundTint="#777"
        android:gravity="center"
        android:layout_marginTop="11dp"
        android:text="@string/dynamicsTxt" />
</RelativeLayout>