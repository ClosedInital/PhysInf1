<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kinematicsAct">


    <TextView
        android:id="@+id/kinAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_alternates_black"
        android:text="@string/kinHeader"
        android:textAlignment="center"
        android:textSize="15pt"
        android:textColor="#999"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="6dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_below="@id/kinAbout"
        android:background="#333"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="67dp">


        <TextView
            android:id="@+id/kinAboutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:text="@string/aboutKinematics"
            android:textColor="#999"

            android:textSize="8pt" />


    </ScrollView>


    <Button
        android:id="@+id/formulesActBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kinAbout"
        android:layout_marginTop="589dp"
        android:backgroundTint="#777"
        android:fontFamily="@font/montserrat_alternates_black"
        android:text="@string/formulesTxt"
        android:textColor="#FFF"
        tools:ignore="InOrMmUsage" />


</RelativeLayout>