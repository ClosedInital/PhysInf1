<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="100mm"
        android:id="@+id/act2"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/OMD_txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#333"
                android:fontFamily="@font/montserrat_alternates_black"
                android:text="@string/kinTxt1"
                android:textColor="#c2c2c2"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/OMD_txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_black"
                android:text="@string/OMD_txt2"
                android:textColor="#c2c2c2"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:layout_below="@id/OMD_txt1"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/psp_img"
                android:layout_marginTop="28mm"
                android:layout_centerInParent="true"
                android:layout_below="@id/OMD_txt2"
                tools:ignore="InOrMmUsage" />

            <TextView
                android:id="@+id/OMD_txt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/OMD_txt2"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/montserrat_alternates_black"
                android:text="@string/OMD_txt3"
                android:textColor="#c2c2c2"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/OMD_txt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_black"
                android:background="#333"
                android:text="@string/OMD_txt4"
                android:textColor="#c2c2c2"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:layout_below="@id/OMD_txt3"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pss_img"
                android:layout_below="@id/OMD_txt3"
                android:layout_marginTop="33mm"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/OMD_txt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_black"
                android:background="#333"
                android:text="@string/OMD_txt5"
                android:textColor="#c2c2c2"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:layout_below="@id/OMD_txt4"/>

            <ImageView
                android:id="@+id/os1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/OMD_txt4"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="67mm"

                android:src="@drawable/os1" />

            <ImageView
                android:id="@+id/os2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/os1"
                android:layout_marginTop="130dp"
                android:src="@drawable/os2"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:id="@+id/os3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/os2"
                android:layout_marginTop="240dp"
                android:src="@drawable/os3"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/os4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/os3"
                android:layout_marginTop="25dp"
                android:src="@drawable/os4"
                android:layout_centerInParent="true"

                />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/act2"
        android:text="Назад"
        />

</RelativeLayout>